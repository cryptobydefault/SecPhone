<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ll.mesh.persist.App" table="app">
		<id name="id" column="APP_ID">
			<generator class="native" />
  		</id>
  		<property name="email"/>
  		<property name="name"/>
  		<property name="passwordSalt"/>
  		<property name="passwordHash"/>
		<set name="devices" table="device" inverse="true" cascade="all" lazy="false" fetch="select">
			<key>
				<column name="APP_ID" not-null="true" />
			</key>
			<one-to-many class="ll.mesh.persist.Device" />
		</set>
		<set name="attributes" table="attribute" inverse="true" cascade="all" lazy="false" fetch="select">
			<key>
				<column name="APP_ID" not-null="true" />
			</key>
			<one-to-many class="ll.mesh.persist.Attribute" />
		</set>
	</class>	
	<query name="appByEmail"><![CDATA[
		from App app where app.email = :email
	]]></query>	
</hibernate-mapping>
