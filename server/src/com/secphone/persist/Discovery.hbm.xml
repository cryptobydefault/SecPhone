<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ll.mesh.persist.Discovery" table="discovery">
		<id name="id" column="DISCOVERY_ID">
			<generator class="native" />
  		</id>
  		<property name="mac"/>
  		<property name="timestamp"/>
  		<property name="latitude"/>
  		<property name="longitude"/>
  		<property name="accuracy"/>
	</class>	
	<query name="latestByMac"><![CDATA[
		from Discovery discovery where discovery.mac = :mac order by timestamp desc
	]]></query>	
</hibernate-mapping>
