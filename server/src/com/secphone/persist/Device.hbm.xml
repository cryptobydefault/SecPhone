<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ll.mesh.persist.Device" table="device">
		<id name="deviceId" column="DEVICE_ID">
			<generator class="native" />
  		</id>
  		<property name="MAC"/>
  		<property name="hasLocation"/>
  		<property name="latitude"/>
  		<property name="longitude"/>
		<many-to-one name="app" class="ll.mesh.persist.App" lazy="false" fetch="select">
			<column name="APP_ID" not-null="true" />
		</many-to-one>
	</class>	
	<query name="deviceByMAC"><![CDATA[
		from Device device where device.MAC = :MAC
	]]></query>	
		<query name="deviceByMacAndApp"><![CDATA[
		from Device device where device.MAC = :MAC and device.app = :app
	]]></query>	
</hibernate-mapping>
